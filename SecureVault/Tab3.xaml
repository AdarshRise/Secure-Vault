            <TextBox Height="35" Canvas.Left="710" FontSize="20" TextWrapping="Wrap" IsReadOnly="True" Foreground="Beige" FontFamily="Consolas" FontStretch="Medium"  Canvas.Top="307" Width="266" RenderTransformOrigin="0.495,0.954"/>
            <Button Content="UnLoad" Canvas.Left="738" Canvas.Top="372" Width="90"/>

        </Canvas>
    </Grid>
</UserControl>
